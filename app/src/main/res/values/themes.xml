<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BomDiaDeus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- Text appearance. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.BomDiaDeus.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.BomDiaDeus.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.BomDiaDeus.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.BomDiaDeus.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BomDiaDeus.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BomDiaDeus.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BomDiaDeus.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BomDiaDeus.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BomDiaDeus.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BomDiaDeus.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BomDiaDeus.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.BomDiaDeus.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.BomDiaDeus.Overline</item>
    </style>

    <!-- Verse display theme -->
    <style name="VerseCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.BomDiaDeus.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
